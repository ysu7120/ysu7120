   \n","        word_senses = wordnet.synsets(word)\n","        best_sense = word_senses[0]  # Assume that first sense is most freq.\n","        max_overlap = 0\n","        context = set(word_tokenize(sentence))  \n","        for sense in word_senses:\n","            signature = tokenized_gloss(sense)\n","            overlap = compute_overlap(signature, context, stopwords)\n","            if overlap > max_overlap:\n","                max_overlap = overlap\n","                best_sense = sense\n","                \n","        return best_sense"],"metadata":{"id":"5BphnMKA0-Io","executionInfo":{"status":"ok","timestamp":1651056980502,"user_tz":-540,"elapsed":6,"user":{"displayName":"유성운","userId":"04010736311021015655"}}},"execution_count":32,"outputs":[]},{"cell_type":"code","source":["def tokenized_gloss(sense):\n","        tokens = set(word_tokenize(sense.definition()))\n","        for example in sense.examples():\n","            tokens.union(set(word_tokenize(example)))\n","        return tokens"],"metadata":{"id":"f9Wt0E250_od","executionInfo":{"status":"ok","timestamp":1651056981961,"user_tz":-540,"elapsed":2,"user":{"displayName":"유성운","userId":"04010736311021015655"}}},"execution_count":33,"outputs":[]},{"cell_type":"code","source":["def compute_overlap(signature, context, stopwords):\n","        gloss = signature.difference(stopwords)\n","        return len(gloss.intersection(context))"],"metadata":{"id":"E6JeCjzS1Bwg","executionInfo":{"status":"ok","timestamp":1651056982979,"user_tz":-540,"elapsed":2,"user":{"displayName":"유성운","userId":"04010736311021015655"}}},"execution_count":34,"outputs":[]},{"cell_type":"code","source":["stopwords = set(stopwords.words('english'))# NLTK에서 지정한 영어 불용어 처리 ex) i, my, they...\n","sentence = (\"Tom likes his new pen\")\n","context = set(word_tokenize(sentence))\n","word = 'likes'\n","\n","print(\"Word :\", word)\n","syn = wordnet.synsets('likes')[1]\n","print(\"Sense :\", syn.name())\n","print(\"Definition :\", syn.definiti