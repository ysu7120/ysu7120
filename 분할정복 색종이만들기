숫자 사이에는 빈칸이 하나씩 있다.\n","\n","N = int(input())\n","paper=[list(map(int,input().split()))for i in range(N)]\n","blue=0\n","white=0\n","\n","def recursive(x, y, N):\n","    global white, blue\n","    color=paper[x][y]\n","    for i in range(x, x + N):\n","      for j in range(y, y + N):\n","        if color != paper[i][j]:\n","          recursive(x, y, N // 2)\n","          recursive(x, y + N // 2, N // 2)\n","          recursive(x + N // 2, y, N // 2)\n","          recursive(x + N // 2, y + N // 2, N // 2)\n","          return\n","                \n","\n","    if color== 0:\n","      white+=1\n","    else:\n","      blue+=1\n","\n","recursive(0,0,N)\n","print(white)\n","print(blue)"]}]}